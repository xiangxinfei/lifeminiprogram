.swiper-container {
  width: 100%;
  height: 380rpx;
}

.swiper-container .item-image,
.swiper-container .navigator {
  width: 100%;
  height: 100%;
}

.menu {
  display: flex;
  flex-wrap: wrap;
}

.menu .menu-item {
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f5f5f5;
  border-right: 1px solid #f5f5f5;
}

.menu .item-image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 18rpx;
}

.menu .item-text {
  font-size: 26rpx;
}
