.search-form {
  width: 95%;
  margin: 10rpx auto;
  height: 64rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  position: relative;
}

.search-input {
  width: 100%;
  height: 64rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.search-box {
  position: absolute;
  top: 50%;
  left: 50%;
  /* translate: -50% -50%; */
  transform: translate(-50%, -50%);
}

.search-icon {
  margin-right: 10rpx;
}

.search-text {
  font-size: 28rpx;
  color: #e0e0e0;
}
