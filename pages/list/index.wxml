<view class="container">
  <view class="search-form" wx:if="{{showBlock}}">
    <input class="search-input" bindinput="inputchangeHandle" bindconfirm="inputconfirm" cursor-spacing="2" confirm-type="搜索"></input>
    <view class="search-box">
      <icon type='search' class='search-icon' color='#e0e0e0' size='13'></icon>
      <text class="search-text">搜索</text>
    </view>
  </view>
  <view class="list" wx:if="{{showBlock}}">
    <navigator url="/pages/list-detail/index?id={{item.id}}" class="list-item" hover-class="none" wx:for="{{list}}" wx:key="id">
      <view class="listImage">
        <image src="{{item.images[0]}}" lazy-load="{{true}}" mode="aspectFill" />
      </view>
      <view class="list-detail">
        <text class="title">{{item.name}}</text>
        <text class="phone-num">电话：{{item.phone}}</text>
        <text class="address">地址：{{item.address}}</text>
        <text class="open-time">营业时间：{{item.businessHours}}</text>
        <!-- 评分 -->
        <text class="score" wx:if="{{item.score}}">{{item.score}}</text>
      </view>
    </navigator>
  </view>
  <view class="loading" wx:if="{{reachBottomFlag}}">正在加载 . . .</view>
</view>
