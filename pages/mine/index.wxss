/* pages/mine/mine.wxss */
.title {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  display: block;
  color: #e2793d;
  margin-bottom: 20rpx;
}

.getUserInfo,
.clearMsg {
  width: 260rpx !important;
  height: 80rpx;
  line-height: 80rpx;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo .avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin: 40rpx;
}

.userInfo .nickName,
.userInfo .gender,
.userInfo .country {
  margin-bottom: 20rpx;
}

.userInfo .place {
  margin-bottom: 40rpx;
}
