.clearfix:after {
  content: ".";
  clear: both;
  height: 0;
  overflow: hidden;
  visibility: hidden;
  display: block;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

view,
scroll-view,
swiper,
movable-area,
cover-view,
navigator,
text,
button,
input {
  box-sizing: border-box;
}
